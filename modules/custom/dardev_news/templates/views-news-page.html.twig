
<div class="row mx-auto">
	{% for key, row in rows   %}
	<div class="col-lg-6 col-md-6 col-sm-12">
	  <div class="course_card">
		<div class="course_card_img"><img src="/{% if row.image %}{% apply spaceless %}{{ row.image|render|striptags }}{% endapply %}{% endif %}" alt="{% apply spaceless %}{{row.title|render|striptags|raw}}{% endapply %}"/></div>
		<div class="course_card_content">
		  <h3 class="title">{% apply spaceless %}{{row.title|render|striptags|raw}}{% endapply %}</h3>
		  {% set text = row.body|render|striptags %}
		  <p class="description">{{ text|length > 250 ? text|slice(0, 250)|raw ~ '....' : text|raw }}</p>
		</div>
		<div class="course_card_footer"><a class="nav-item" href="{% apply spaceless %}{{ row.url|render|striptags }}{% endapply %}">{{"Lire suite"|t}}</a></div>
	  </div>
	</div>
	{% endfor %}
</div>










