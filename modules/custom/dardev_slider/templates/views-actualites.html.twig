{% if is_mobile() %}
      <div class="container" id="actualite_mobile">
        <div class="card">
          <div class="card-body">
			<div class="row gx-2 align-items-end">
				<div class="col-8">
				  <div class="image-gallery-text mb-4">
					<h3 class="mb-0">{{'Actualités'|t}}</h3>
				  </div>
				</div>
				<div class="col-4 text-end"><a class="btn btn-primary btn-sm mb-4" href="/les-actualités">{{'Voir Plus +'|t}}</a></div>
			  </div>
            
			
            <div class="testimonial-slide-three-wrapper">
              <div class="testimonial-slide3 testimonial-style3">
                <!-- Single Testimonial Slide -->
				{% for key, row in rows   %}
                <div class="single-testimonial-slide">
				
                  <div class="text-content">
				  <div class="image-wrapper shadow-sm">
					<img src="{% if row.image %}{{ row.image|render|striptags }}{% endif %}" alt="">
					</div>
				  
                    <p class="mb-2">{{row.title|render|striptags}}</p>
					<span class="d-block"><a href="#" class="btn btn-sm btn-outline-jeb">Lire la suite</a></span>
                  </div>
                </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
	  {% else %}
<div class="container-fluid  m-0 p-0">
	<div class="row  m-0 p-0">
		<div class="col-md-12 mt-4 pt-2">
			
			<h1 class="text-green text-uppercase encodeblod ">{{'Actualités'|t}}  </h1>
		</div>
		<div class="col-md-12 mt-4 pt-2  m-0 p-0">
			
			<div class="tiny-actu-item  m-0 p-0" id="news_4">
				{% for key, row in rows   %}
				<div class="col-lg-12 mt-4 pt-2">
					<div class="card event-schedule rounded border">

						<div class="card-body">
							<div class="d-flex">
								<div class="bg-actualites"  >
								
								
									<img alt="" class="actu-img-top img-same-height" src="{% if row.image %}{{ row.image|render|striptags }}{% endif %}">
								</div>	
								<div class="flex-1 content">
									<h4><a href="{{ row.url|render|striptags }}" class="text-green title">{{row.title|render|striptags}}</a></h4>
									<p class="text-muted location-time"
									<span class="text-dark h6">{{row.date|render|striptags}}</span> 
									<p>
									<a href="{{ row.url|render|striptags }}" class="btn btn-sm btn-outline-jeb">Lire la suite</a>
									</p>
								</div>
							</div>
						</div>
					</div>
				</div><!--end col-->
		{% endfor %}
			</div>
		</div><!--end col-->
	</div><!--end row-->
</div>
{% endif %}