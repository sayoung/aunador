
<div class="row">

{% for node in nodes %}
<div class="snip1208 col-md-4">
  <img src="{{ file_url(node.field_service_images.entity.fileuri) }}" alt="{{ node.label }}"/>
  <div class="date"><span class="day"> {% set MM = node.getCreatedTime|date('U')|date("M") %}{{ node.field_date.value|date('U')|date("d") }}</span><span class="month">{{ MM|trans }}</span></div><i class="ion-android-calendar"></i>
  <figcaption>
    <h3>
      {% set text = node.title.0.value|render|striptags %}
      {{ text|length > 100 ? text|slice(0, 100) ~ '...' : text }}
    </h3>
    <p>
      {% set text = node.body.0.value|render|striptags %}
      {{ text|length > 200 ? text|slice(0, 200) ~ '...' : text }}

    </p>
    <button>Lire plus</button>
  </figcaption><a href="{{ path('entity.node.canonical', {'node': node.id}) }}"></a>
</div>
{% endfor %}
</div>
