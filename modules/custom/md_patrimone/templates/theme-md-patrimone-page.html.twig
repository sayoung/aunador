<div class="row presse ">
<div  class="col-12 ">
	  <div  class="field field--name-title-text field--type-string ">{% trans %}Notre Patrimoine {% endtrans %}</div>
	  </div>
	  {% set lang = cur_lang %}

{% for node in nodes %}
<div class="snip1208 col-md-4">
  <img src="{{ file_url(node.field_gallerier.entity.fileuri) }}" alt="{{ node.label }}"/>
  
  <figcaption>
    <h3>
      {% if node.hastranslation(lang) %}
    {{ node.translation(lang).title.0.value }}
    {% else %}
    {{ 'No translation'|t }}
    {% endif %}
    </h3>
    <p>

{% if node.hastranslation(lang) %}
    
	{% set text = node.translation(lang).body.0.value|render|striptags %}
      {{ text|length > 200 ? text|slice(0, 200) ~ '...' : text }}
    {% else %}
    {{ 'No translation'|t }}
    {% endif %}

    </p>
    <button>{{ 'Lire plus'|t }}</button>
  </figcaption><a href="{{ path('entity.node.canonical', {'node': node.id}) }}"></a>
</div>
{% endfor %}
</div>



</div>
